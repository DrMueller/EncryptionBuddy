<Window x:Class="Mmu.EncryptionBuddy.Areas.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Title="Encryption Buddy"
        Height="450"
        Width="800">

    <Window.Resources>
        <ResourceDictionary Source="/Areas/Views/MainWindowDict.xaml" />
    </Window.Resources>

    <Grid Style="{StaticResource MainGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox x:Name="TxbValue" Margin="0,0,0,10" />
        <TextBox Grid.Row="1" x:Name="TxbNewValue" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnDecrypt" Click="BtnDecrypt_Click" Content="Decrypt" />
            <Button x:Name="BtnEncrypt" Click="BtnEncrypt_Click" Content="Encrypt" />
        </StackPanel>
    </Grid>
</Window>